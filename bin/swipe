#!/bin/bash

: '
get screen dimensions to get height and width of emulator screen
'
screen_dimensions=$(adb shell wm size)
screen_width=$(echo "$screen_dimensions" | awk '{print $3}' | cut -d 'x' -f 1)
screen_height=$(echo "$screen_dimensions" | awk '{print $3}' | cut -d 'x' -f 2)

: '
@option start_y have -500 to avoid any area that is covered by system bars
calculate y excluding system bars
'
start_x=$((screen_width / 2))
start_y=$((screen_height - 500))
end_x=$((screen_width / 2))
end_y=$((screen_height / 4))

# send swipe event
adb shell input swipe $start_x $start_y $end_x $end_y
